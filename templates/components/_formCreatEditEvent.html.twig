	{% for type, messages in app.session.flashbag.all() %}

				{% for message in messages %}
					<div class=" {{ (type == 'error') ? 'bg-red-100 border-2 border-red-400 text-red-700' : 'bg-green-100 border-2 border-green-400 text-green-700'}} m-auto px-4 py-3 rounded relative w-96">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
			{% for message in app.flashes('success') %}
				<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative w-96" role="alert">
					<strong class="font-bold">{{message}}</strong>
				</div>
			{% endfor %}
			{% for message in app.flashes('error') %}
				<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative w-96" role="alert">
					<strong class="font-bold">{{message}}</strong>
				</div>
			{% endfor %}
			<div class="form-event p-10">
				{{ form_start(form) }}
				<div class="d-flex flex-row justify-center">
					{{ form_row(form.artist,
       						{'attr':{'placeholder': "artiste",'class':'m-10'} }) }}
					{{ form_row(form.city,
        					{'attr':{'placeholder': "Ville",'class':'m-10'} }) }}
				</div>
				{{ form_row(form.eventDate) }}

				<button type="submit" class="btn btn-primary m-10">{{ editMode  ? 'Modifier' : 'Cr√©er' }}</button>
				{{ form_end(form) }}
			</div>